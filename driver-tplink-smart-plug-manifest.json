{
	"manifest-version": 1,

	"name": "driver-tplink-smart-plug",
	"databox-type": "driver",
	"version": "0.3.0",

	"description": "An driver for tplink smart plugs.",
	"author": "Tosh Brown <Anthony.Brown@nottingham.ac.uk>",
	"license": "MIT",
	"tags": [
		"tplink",
		"smatplug",
		"gloang"
	],

	"homepage": "https://github.com/me-box/driver-tplink-smart-plug",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/me-box/driver-tplink-smart-plug"
	},


	"resource-requirements": {
		"store": "core-store"
	},

	"provides": [
		{
			"data-source-type": "TP-Power-Usage",
			"description": "TP-Link Wi-Fi Smart Plug HS100 power usage",
			"store-type": "tsblob",
			"schema": {}
		},
		{
			"data-source-type": "TP-PowerState",
			"description": "TP-Link Wi-Fi Smart Plug HS100 power state",
			"store-type": "tsblob",
			"schema": {}
		},
		{
			"data-source-type": "TP-SetPowerState",
			"description": "Set TP-Link Wi-Fi Smart Plug HS100 set power state",
			"store-type": "tsblob",
			"schema": {}
		}
	]
}
