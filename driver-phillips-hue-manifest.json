{
	"manifest-version": 1,

	"name": "driver-phillips-hue",
	"version": "0.3.0",

	"description": "A Databox driver for the phillips hue lights",
	"author": "James Colley <James.Colley@nottingham.ac.uk> ()",
	"license": "MIT",
	"databox-type":"driver",
	"tags": [
		"driver",
		"sensor",
		"sensors"
	],

	"homepage": "https://github.com/me-box/driver-phillips-hue",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/me-box/driver-phillips-hue.git"
	},


	"resource-requirements": {
		"store":"core-store"
	},
    "provides": [
		{
			"data-source-type": "bulb-on",
			"description": "bulb on state",
			"store-type": "tsblob",
			"schema": {}
		},
		{
			"data-source-type": "bulb-hue",
			"description": "bulb hue value",
			"store-type": "tsblob",
			"schema": {}
		},
		{
			"data-source-type": "bulb-bri",
			"description": "bulb brightness value",
			"store-type": "tsblob",
			"schema": {}
		},
		{
			"data-source-type": "bulb-sat",
			"description": "bulb saturation value",
			"store-type": "tsblob",
			"schema": {}
        },
		{
			"data-source-type": "bulb-ct",
			"description": "bulb color temperature value",
			"store-type": "tsblob",
			"schema": {}
        },
		{
			"data-source-type": "set-bulb-on",
			"description": "Set bulbs on off state",
			"store-type": "tsblob",
			"schema": {}
        },
		{
			"data-source-type": "set-bulb-hue",
			"description": "Set bulbs hue value",
			"store-type": "tsblob",
			"schema": {}
        },
		{
			"data-source-type": "set-bulb-bri",
			"description": "Set bulbs brightness",
			"store-type": "tsblob",
			"schema": {}
        },
		{
			"data-source-type": "set-bulb-sat",
			"description": "Set bulbs saturation value",
			"store-type": "tsblob",
			"schema": {}
        },
		{
			"data-source-type": "set-bulb-ct",
			"description": "Set bulb color temperature value",
			"store-type": "tsblob",
			"schema": {}
        },
		{
			"data-source-type": "hue-ZLLTemperature",
			"description": "Hue temperature sensor value",
			"store-type": "tsblob",
			"schema": {}
        },
		{
			"data-source-type": "hue-ZLLPresence",
			"description": "Hue presence sensor",
			"store-type": "tsblob",
			"schema": {}
        },
		{
			"data-source-type": "hue-ZLLLightLevel",
			"description": "Hue light level sensor",
			"store-type": "tsblob",
			"schema": {}
        }
    ]
}